# Django设置
DJANGO_SECRET_KEY=your-secret-key-here-change-this-in-production
DJANGO_DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,news.local,sports.local,tech.local

# 数据库配置
DATABASE_URL=sqlite:///db.sqlite3
# 生产环境使用PostgreSQL
# DATABASE_URL=postgresql://user:pass@localhost/dbname

# Redis缓存
REDIS_URL=redis://localhost:6379/0

# OpenSearch搜索 (可选)
OS_ENABLED=0
OS_URL=http://localhost:9200
OS_INDEX=news_articles

# 邮件设置
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Wagtail设置
WAGTAIL_SITE_NAME=News Platform
WAGTAILADMIN_BASE_URL=http://localhost:9000

# 静态文件设置
STATIC_URL=/static/
MEDIA_URL=/media/

# 日志设置
LOG_LEVEL=INFO
LOG_FILE=debug.log

# 安全设置
CSRF_TRUSTED_ORIGINS=http://localhost:9000,http://127.0.0.1:9000
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False 